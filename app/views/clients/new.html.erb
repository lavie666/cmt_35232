<div class="contents row">
  <div class="container">
    <h3>顧客追加</h3>
    <%= form_with(model: @client, local: true) do |f| %>
      <%= f.text_field :name, placeholder: "名前" %>
      <%= f.text_field :name_hiragana, placeholder: "名前(かな)" %>
      <div class='form-text-wrap'>
        <label class="weight-bold-text">誕生日</label>
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                f.date_select(
                  :birthday,
                  class:'select-birth',
                  id:"birth-date",
                  use_month_numbers: true,
                  prompt:'--',
                  start_year: 1950,
                  end_year: (Time.now.year - 5),
                  date_separator: '%s'),
                "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
      <div class="weight-bold-text">住んでいるところ</div>
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box"}) %>
      <div class="weight-bold-text">出身地</div>
      <%= f.collection_select(:from_id, From.all, :id, :name, {}, {class:"select-box"}) %>
      <%= f.text_field :corporation, placeholder: "会社名" %>
      <%= f.text_field :drink, placeholder: "好きなお酒" %>
      <%= f.text_field :food, placeholder: "好きな食べ物" %>
      <%= f.text_field :cigarettes, placeholder: "タバコ" %>
      <%= f.text_area  :memo, placeholder: "メモ" %>
      <div class="img-upload">
      <div class="click-upload">
        <p>
          写真アップロード
        </p>
        <%= f.file_field :image, id:"#" %>
      </div>
    </div>
      <%= f.submit "追加" %>
    <% end %>
  </div>
</div>